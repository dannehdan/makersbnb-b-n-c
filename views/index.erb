<div class="jumbotron jumbotron-fluid" style="background-image: url('images/hero-image.jpg'); height: 100%; background-position: center; background-repeat: no-repeat; background-size: cover;">
  <div class="container">
    <div class="row">
      <div class="d-flex justify-content-center">
        <h1 class="top-row text-center">MakersBnB</h1>
      </div>
      <div class="row">
        <div class="d-flex justify-content-center">
          <% if session[:user_id] %>
            <p class="lead subtitle"><%= "Welcome, #{session[:user_name]}" %></p>
          <% end %>
         </div>
        </div>
      </div>
    </div>

  
    <div class="row">
      <div class="d-flex justify-content-center">
        <form  action="/about" method="get">
          <button class="button" type="submit">About</button>
        </form> 
      </div>
      <div class="d-flex justify-content-center">
        <form  action="/users/new" method="get">
          <button class="button" type="submit">Sign Up</button>
        </form>
      </div>
    </div>
  </div>
</div>
